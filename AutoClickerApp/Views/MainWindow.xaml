<local:MainWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AutoClickerApp;assembly=AutoClickerApp"
    WindowStartupLocation="CenterScreen"
    Title="―― AutoClicker ―― by AutocorrectGuy"
    Height="500"
    Width="440"
    Background="#252526"
    Foreground="#eeeeee"
    FontFamily="Segoe UI"
    FontSize="14">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="380">

        <!-- App Title -->
        <TextBlock TextAlignment="Center" Margin="0 0 0 8" FontSize="24" FontWeight="Bold">
            <Run Text="―――― " Foreground="#007fd4"/>
            <Run Text="Auto" Foreground="#eeeeee"/>
            <Run Text="Clicker" Foreground="#007fd4"/>
            <Run Text=" ――――" Foreground="#007fd4"/>
        </TextBlock>

        <!-- Subtitle -->
        <TextBlock Text="Spacebar to start and Escape to stop"
                   FontStyle="Italic"
                   Foreground="#888"
                   FontSize="13"
                   Margin="0 0 0 20"
                   TextAlignment="Center" />

        <!-- Stats Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Status -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="8,4"/>
            <TextBlock Grid.Row="0" Grid.Column="1"
                       Text="{Binding AutoClicker.IsClickingStatusText}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="8,4">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#7AB0DF"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AutoClicker.IsClicking}" Value="True">
                                <Setter Property="Foreground" Value="LimeGreen"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- CPS input -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="CPS:" VerticalAlignment="Center" Margin="8,4"/>
            <Border Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    CornerRadius="4"
                    BorderThickness="1"
                    BorderBrush="#007fd4"
                    Background="#3c3c3c"
                    Margin="8,4">
                <TextBox Text="{Binding AutoClicker.CpsInput, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         Foreground="#eeeeee"
                         BorderThickness="0"
                         TextAlignment="Center"
                         MinWidth="60"
                         Padding="4,2"/>
            </Border>

            <!-- Interval (read-only display) -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Interval:" VerticalAlignment="Center" Margin="8,4"/>
            <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="{Binding AutoClicker.IntervalMs, StringFormat='{}{0} ms'}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="8,4"/>
        </Grid>

        <!-- Clicks done label -->
        <TextBlock Text="Clicks done:"
                   FontSize="12"
                   Foreground="#888"
                   TextAlignment="Center"
                   Margin="0 20 0 2" />

        <!-- Big Click Count -->
        <TextBlock Text="{Binding AutoClicker.ClicksCount}"
                   FontSize="48"
                   FontWeight="Bold"
                   Foreground="#007fd4"
                   TextAlignment="Center"
                   Margin="0 0 0 20" />

        <!-- Smart Hotkey Prompt -->
        <TextBlock TextAlignment="Center"
                   FontSize="20"
                   FontWeight="SemiBold">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Text" Value="Press SPACE to start" />
                    <Setter Property="Foreground" Value="#7AB0DF" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AutoClicker.IsClicking}" Value="True">
                            <Setter Property="Text" Value="Press ESC to stop" />
                            <Setter Property="Foreground" Value="LimeGreen" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

    </StackPanel>
</local:MainWindow>
